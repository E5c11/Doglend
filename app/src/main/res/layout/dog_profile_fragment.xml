<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/dog_profile_motion"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.esc.doglend.ui.fragments.profiles.DogProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/banner_pic"
        android:src="@drawable/pic1"
        android:scaleType="centerCrop"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/profile_pic"
        android:elevation="6dp"
        android:background="@drawable/compass_darker"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/banner_pic"
        app:layout_constraintBottom_toBottomOf="@id/banner_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/profile_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/profile_pic"
        tools:text="Hans"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/breed"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:elevation="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_pic"
        app:layout_constraintBottom_toBottomOf="@id/banner_pic"
        tools:text="Breed"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/rating"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:elevation="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@id/rating_icon"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintBottom_toBottomOf="@id/banner_pic"
        tools:text="Rating"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rating_icon"
        android:elevation="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/baseline_star_24"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rating"
        app:layout_constraintTop_toTopOf="@id/rating"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/space_one"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/banner_pic"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/centre_vert"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/centre_left_vert"
        app:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_age"
        android:id="@+id/age_text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/space_one"
        app:layout_constraintEnd_toStartOf="@id/profile_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_age"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/age_text"
        app:layout_constraintBottom_toBottomOf="@id/age_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="5 yo"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_size"
        android:id="@+id/size_text"
        android:textSize="17sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/age_text"
        app:layout_constraintEnd_toStartOf="@id/centre_left_vert"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_size"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/size_text"
        app:layout_constraintBottom_toBottomOf="@id/size_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Medium"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_sociability"
        android:id="@+id/sociability_text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/size_text"
        app:layout_constraintEnd_toStartOf="@id/centre_vert"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_sociability"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sociability_text"
        app:layout_constraintBottom_toBottomOf="@id/sociability_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Friendly"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/centre_right_vert"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_sex"
        android:id="@+id/sex_text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/space_one"
        app:layout_constraintStart_toEndOf="@id/profile_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_sex"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/sex_text"
        app:layout_constraintBottom_toBottomOf="@id/sex_text"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Male"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_stamina"
        android:id="@+id/stamina_text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/energy_text"
        app:layout_constraintStart_toEndOf="@id/centre_vert"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_stamina"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/stamina_text"
        app:layout_constraintBottom_toBottomOf="@id/stamina_text"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="5 km"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_energy"
        android:id="@+id/energy_text"
        android:textSize="17sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/sex_text"
        app:layout_constraintStart_toEndOf="@id/centre_right_vert"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog_energy"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/energy_text"
        app:layout_constraintBottom_toBottomOf="@id/energy_text"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Active"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/space_two"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sociability_text"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/compass_darker"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        tools:visibility="gone"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/month_header"
        android:id="@+id/month_header"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/space_two"
        app:layout_constraintBottom_toTopOf="@id/week_names"/>

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/weekday_button"
        android:id="@+id/time_header"
        app:layout_constraintTop_toTopOf="@id/week_names"
        app:layout_constraintBottom_toBottomOf="@id/week_names"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"/>

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        layout="@layout/week_names"
        android:id="@+id/week_names"
        app:layout_constraintTop_toBottomOf="@id/month_header"
        app:layout_constraintBottom_toTopOf="@id/week_view"
        app:layout_constraintStart_toEndOf="@id/time_header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/week_view"
        app:layout_constraintTop_toBottomOf="@id/week_names"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/quantum_grey"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:shadowColor="@color/black"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fab"
        app:layout_constraintEnd_toEndOf="@id/fab"
        app:layout_constraintStart_toStartOf="@id/fab"
        app:layout_constraintTop_toTopOf="@id/fab" />

</androidx.constraintlayout.motion.widget.MotionLayout>